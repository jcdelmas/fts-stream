{
  "name": "typescript-io",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/lodash": "^4.14.119",
    "@types/node": "^11.13.6",
    "highland": "^2.13.4",
    "jest": "^24.7.1",
    "lodash": "^4.17.11",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "typescript": "^3.4.4"
  },
  "scripts": {
    "watch": "tsc -w",
    "test": "jest",
    "clean": "rimraf dist",
    "lint": "tslint -p tsconfig.json",
    "build": "tsc",
    "prepublishOnly": "yarn run clean && yarn run lint && yarn run test && yarn run build"
  },
  "jest": {
    "transform": {
      "^.+\\.(j|t)s$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/src/**/__tests__/*.spec.ts"
    ]
  }
}
