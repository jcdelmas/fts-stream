{
  "name": "fts-stream",
  "version": "0.1.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "watch": "tsc -w",
    "test": "jest",
    "clean": "rimraf dist docs/generated",
    "lint": "tslint -p tsconfig.json",
    "build": "tsc",
    "prepublishOnly": "yarn run clean && yarn run lint && yarn run test && yarn run build",
    "docs": "yarn run docs:api && yarn run docz:build",
    "docs:api": "node tasks/docs.js",
    "docz:dev": "docz dev",
    "docz:build": "docz build"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.138",
    "@types/node": "^12.7.4",
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "handlebars": "^4.1.2",
    "highland": "^2.13.5",
    "jest": "^24.9.0",
    "lodash": "^4.17.15",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.6.2"
  },
  "jest": {
    "transform": {
      "^.+\\.(j|t)s$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/src/**/__tests__/*.spec.ts"
    ]
  }
}
